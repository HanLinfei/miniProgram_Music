<wxs src="../../../utils/format.wxs" module="format"></wxs>
<view class="menu-item">
  <view class="img-box">
    <image class="image" mode="widthFix" src="{{item.picUrl}}" lazy-load></image>
    <view class="play-counter">{{format.formatCount(item.playCount)}}</view>
  </view>
  <view class="content">
    <text>{{item.name}}</text>
  </view>
</view>