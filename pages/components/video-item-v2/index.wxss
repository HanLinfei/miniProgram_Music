.item {
  display: flex;
  margin-top: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.image-box {
  flex: 0 0 35%;
  position: relative;
}

.image-box>image {
  width: 100%;
  border-radius: 8rpx;
}

.content {
  flex: 0 0 65%;
  padding: 0 20rpx;

}

.content>.title {
  width: 100%;
  font-weight: bold;
  font-size: 26rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.content>.author {
  font-size: 22rpx;
  color: gray;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.image-box::before {
  content: "";
  position: absolute;
  width: 28rpx;
  height: 20rpx;
  background-size: cover;


  bottom: 18rpx;
  left: 10rpx;
  background-image: url("data:image/png;base64,");
}

.play-time {
  font-size: 20rpx;
  position: absolute;

  color: #ffffff;
  bottom: 16rpx;
  left: 50rpx;
}